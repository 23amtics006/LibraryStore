@model IEnumerable<LibraryStore.Models.Book>

<h2 class="mb-3">Available Books</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Search books..." />
        <button class="btn btn-outline-secondary">Search</button>
    </div>
</form>

@if (Context.Session.GetString("UserRole") == "Admin")
{
    <a href="/Books/Create" class="btn btn-primary mb-3">+ Add Book</a>
}

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@(book.IsAvailable ? "Available" : "Issued")</td>
                <td>
                    @if (Context.Session.GetString("UserRole") == "Admin")
                    {
                        <a href="/Books/Edit/@book.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a href="/Books/Delete/@book.Id" class="btn btn-sm btn-danger">Delete</a>
                    }
                    else if (book.IsAvailable)
                    {
                        <a asp-controller="Borrow" asp-action="Borrow" asp-route-id="@book.Id" class="btn btn-primary">Borrow</a>

                    }
                    else
                    {
                        <span class="text-muted">Not Available</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>